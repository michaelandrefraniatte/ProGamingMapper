UsersAllowedList        = new string[] { "michael113b" };
PS4ControllerDescriptor = new string[] { "54C", "9CC", "Wireless Controller", "11C0", "4001", "PS4 Fun Controller" };
EnableXC                = true;
xcnumber                = 2;
double mousex           = 0f, mousey = 0f,  statex           = 0f, statey = 0f;
/* First player */
mousex                                = PS4Controller1LeftStickX * 32767f;
mousey                                = PS4Controller1LeftStickY * 32767f;
statex                                = Math.Abs(mousex) <= 32767f ? mousex : Math.Sign(mousex) * 32767f;
statey                                = Math.Abs(mousey) <= 32767f ? mousey : Math.Sign(mousey) * 32767f;
controller1_send_leftstickx           = statex;
controller1_send_leftsticky           = statey;
mousex                                = PS4Controller1RightStickX * 1024f;
mousey                                = PS4Controller1RightStickY * 1024f;
controller1_send_rightstickx          = Math.Abs(-mousex * 32767f / 1024f) <= 32767f ? -mousex * 32767f / 1024f : Math.Sign(-mousex) * 32767f;
controller1_send_rightsticky          = Math.Abs(-mousey * 32767f / 1024f) <= 32767f ? -mousey * 32767f / 1024f : Math.Sign(-mousey) * 32767f;
controller1_send_down                 = PS4Controller1ButtonDPadDownPressed;
controller1_send_left                 = PS4Controller1ButtonDPadLeftPressed;
controller1_send_right                = PS4Controller1ButtonDPadRightPressed;
controller1_send_up                   = PS4Controller1ButtonDPadUpPressed;
controller1_send_leftstick            = PS4Controller1ButtonL3Pressed;
controller1_send_rightstick           = PS4Controller1ButtonR3Pressed;
controller1_send_B                    = PS4Controller1ButtonCrossPressed;
controller1_send_A                    = PS4Controller1ButtonCirclePressed;
controller1_send_Y                    = PS4Controller1ButtonSquarePressed;
controller1_send_X                    = PS4Controller1ButtonTrianglePressed;
controller1_send_lefttriggerposition  = PS4Controller1LeftTriggerPosition * 255;
controller1_send_righttriggerposition = PS4Controller1RightTriggerPosition * 255;
controller1_send_leftbumper           = PS4Controller1ButtonL1Pressed;
controller1_send_rightbumper          = PS4Controller1ButtonR1Pressed;
controller1_send_back                 = PS4Controller1ButtonLogoPressed;
controller1_send_start                = PS4Controller1ButtonTouchpadPressed;
PS4Controller1AccelCenter             = PS4Controller1ButtonMenuPressed;
/* Second player */
mousex                                = PS4Controller2LeftStickX * 32767f;
mousey                                = PS4Controller2LeftStickY * 32767f;
statex                                = Math.Abs(mousex) <= 32767f ? mousex : Math.Sign(mousex) * 32767f;
statey                                = Math.Abs(mousey) <= 32767f ? mousey : Math.Sign(mousey) * 32767f;
