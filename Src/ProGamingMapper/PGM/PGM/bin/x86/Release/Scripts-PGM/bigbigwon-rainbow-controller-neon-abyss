UsersAllowedList        = new string[] { "michael113b" };
EnableKM                = true;
EnableXI                = true;
KeyboardMouseDriverType = "kmevent";
valchanged(0, Controller1ButtonBackPressed);
if (wd[0] == 1 & !getstate[0]) 
{
    width                 = System.Windows.Forms.Screen.PrimaryScreen.Bounds.Width;
    height                = System.Windows.Forms.Screen.PrimaryScreen.Bounds.Height;
    getstate[0] = true;
}
else 
{ 
    if (wd[0] == 1 & getstate[0]) 
    {
        MouseMoveX            = 0;
        MouseMoveY            = 0;
        MouseDesktopX         = 0;
        MouseDesktopY         = 0;
        MouseAbsX             = 0;
        MouseAbsY             = 0;
        SendD                 = false;
        SendQ                 = false;
        SendZ                 = false;
        SendS                 = false;
        Send8                 = false;
        Send7                 = false;
        Send9                 = false;
        Send6                 = false;
        SendB                 = false;  
        Send1                 = false;
        Send2                 = false;
        Send3                 = false;
        Send4                 = false;
        SendSpace             = false;
        SendLeftShift         = false;
        SendE                 = false;
        SendA                 = false;
        SendV                 = false;
        SendEscape            = false;
        SendTab               = false;
        SendR                 = false;
        SendF                 = false;
        SendT                 = false;
        SendG                 = false;
        SendY                 = false; 
        SendU                 = false;
        SendX                 = false;
        SendC                 = false;
        SendRightClick        = false;
        SendLeftClick         = false;
        getstate[0]    = false;
    }
}
if (getstate[0]) 
{
    if (Controller1ButtonStartPressed)
    {
        mousexp[0] = 0f;
        mouseyp[0] = 0f;
    }
    mousexp[0] += Controller1GyroX * width / 2f / 1024f / 5000f;
    mouseyp[0] += Controller1GyroY * height / 2f / 1024f / 5000f;
    if (mousexp[0] >= width / 2f) 
        mousexp[0] = width / 2f;
    if (mousexp[0] <= -width / 2f) 
        mousexp[0] = -width / 2f;
    if (mouseyp[0] >= height / 2f) 
        mouseyp[0] = height / 2f;
    if (mouseyp[0] <= -height / 2f) 
        mouseyp[0] = -height / 2f;
    MouseDesktopX  = width / 2f - mousexp[0] - Controller1GyroX * width / 2f / 1024f / 5000f;
    MouseDesktopY  = height / 2f - mouseyp[0] - Controller1GyroY * height / 2f / 1024f / 5000f;
    SendD          = Controller1ThumbLeftX > 32767f / 5f;
    SendQ          = Controller1ThumbLeftX < -32767f / 5f;
    SendZ          = Controller1ThumbLeftY > 32767f / 5f;
    SendS          = Controller1ThumbLeftY < -32767f / 5f;
    Send1          = Controller1ButtonUpPressed;
    Send2          = Controller1ButtonLeftPressed;
    Send3          = Controller1ButtonDownPressed;
    Send4          = Controller1ButtonRightPressed;
    SendR          = Controller1ButtonXPressed;
    SendF          = Controller1ButtonYPressed;
    SendX          = Controller1ButtonAPressed;
    SendC          = Controller1ButtonBPressed;
    SendA          = Controller1ThumbpadLeftPressed;
    SendE          = Controller1ThumbpadRightPressed;
    SendSpace      = Controller1ButtonShoulderLeftPressed;
    SendLeftShift  = Controller1ButtonShoulderRightPressed;
    SendRightClick = Controller1TriggerLeftPosition >= 1f;
    SendLeftClick  = Controller1TriggerRightPosition >= 1f;
    SendTab        = Controller1ButtonBackPressed;
    SendEscape     = Controller1ButtonStartPressed;  
}